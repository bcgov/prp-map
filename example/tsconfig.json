{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "baseUrl": "../",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "vite.config.ts"],
}
